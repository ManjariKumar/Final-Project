<h1>List of All Institutions</h1>

<table class="table table-hover">
  <thead>
    <tr>
  	  <th>S.No.</th>
      <th>Institution Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
    </tr>
  </thead>

<% i=1 %>
<% @institutions.each do |biz| %>
  <tbody>
    <tr>
      <td><%= i %></td>	
      <td><%= biz.inst_name %></td>
      <td><%= biz.inst_add1%>, <%= biz.inst_city%>, <%= biz.inst_state%>, <%= biz.inst_zip%></td>
      <td><%= biz.inst_phone %></td>
      <td><%= biz.inst_url %></td>
      
      
      <td><%= link_to 'Show', institution_path(biz) %></td>
      <% if can? :update, @institution%>
      <td><%= link_to 'Edit', edit_institution_path(biz) %></td>
      <%end%>
      <% if can? :destroy, @institution%>
      <td><%= link_to 'Delete', institution_path(biz), method: :delete, data: {confirm: 'Are you sure ?'} %></td>
      <%end%>
    </tr>
  </tbody>
<%i +=1 %>
<% end %>
</table>
</br>

<h3><%= link_to "Add a New Institution", new_institution_path %></h3>

