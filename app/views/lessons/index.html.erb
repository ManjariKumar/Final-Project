<h1>Welcome to Class Act</h1>
<h3>User Role</h3> <%= current_user.role %>


<%= form_tag '/', method: :get do %>
  <%= search_field_tag :q, params[:q] %>
  <%= submit_tag "Search" %>
<% end %>

<br/>

<table >
<tr>
  	<th>S.No.</th>
    <th>Class Name</th>
    <th>Description</th>
    <th>Weekday</th>
    <th>Ages</th>
  </tr>

<% i=1 %>
<% @lessons.each do |lesson| %>
<tr>
      <td><%= i %></td>	
      <td><%= lesson.name %></td>
      <td><%= lesson.description %></td>
      <td><%= lesson.weekday %></td>
      <td><%= lesson.min_age %> to </td>
      <td><%= lesson.max_age %></td>
      <td><%= link_to 'Show', lesson_path(lesson) %></td>
      <% if (current_user.role == "admin" || current_user.role == "owner") %>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
      <%end%>

      <% if (current_user.role == "admin" || current_user.role == "owner") %>
        <td><%= link_to 'Delete', lesson_path(lesson), method: :delete, data: {confirm: 'Are you sure ?'} %></td>
      <%end%>
</tr>
<%i +=1 %>
<% end %>
</table>

<% if user_signed_in? %>
  
  <h3><%= link_to "Add a New Class", new_lesson_path %></h3>
<% end %>